{
	"parser": "babel-eslint",
	"env": {
		"node": true,
		"browser": true,
		"es6": true
	},
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "prettier/react"
  ],
  "plugins": ["babel", "react", "prettier"],
	"rules": {
		"eqeqeq": ["error", "smart"],
		"semi": ["error", "never"],
		"react/no-danger": "off",
    "no-extra-semi": "error",
    "array-bracket-spacing": ["error", "never"],
    "object-curly-spacing": ["error", "never"],
    "react/display-name": 0,
    "react/prop-types": 0,
		"react/sort-comp": [
			2,
			{
				"order": [
					"static-methods",
					"state",
					"type-annotations",
					"constructor",
					"lifecycle",
					"everything-else",
					"render"
				]
			}
		],
    "prettier/prettier": "error"
	}
}
